@using SHotel.Business.DTOs.FeatureDTOs
@model FeatureUpdateDTO

<div class="container">
    <div class="row">
        <div class="col-12">
            <form method="post" asp-controller="Feature" asp-action="Update"> 
                <div class="mb-3">
                    <label for="exampleInputEmail5" class="form-label">Icon</label>
                    <input asp-for="Icon" class="form-control" id="exampleInputEmail5">
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail4" class="form-label">Description</label>
                    <input asp-for="Description" class="form-control" id="exampleInputEmail4">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail6" class="form-label">IsDeleted</label>
                    <input asp-for="IsDeleted" class="form-control" id="exampleInputEmail6">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</div>
