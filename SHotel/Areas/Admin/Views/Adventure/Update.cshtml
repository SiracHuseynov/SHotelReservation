@using SHotel.Business.DTOs.AdventureDTOs
@model AdventureUpdateDTO

<div class="container">
    <div class="row">
        <div class="col-12">
            <form method="post" asp-controller="Adventure" asp-action="Update" enctype="multipart/form-data"> 
                <div class="mb-3">
                    <label for="exampleInputEmail5" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" id="exampleInputEmail5">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail5" class="form-label">Blocktext</label>
                    <input asp-for="Blocktext" class="form-control" id="exampleInputEmail5">
                    <span asp-validation-for="Blocktext" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail4" class="form-label">Description</label>
                    <input asp-for="Description" class="form-control" id="exampleInputEmail4">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail2" class="form-label">ImageFile</label>
                    <input asp-for="ImageFile" class="form-control" id="exampleInputEmail2">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">StartDate</label>
                    <input asp-for="StartDate" class="form-control" id="exampleInputEmail1">
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">AdventureCategoryId</label>
                    <select asp-for="AdventureCategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.AdventureCategories,"Id","Name"))"></select>
                    <span asp-validation-for="AdventureCategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail6" class="form-label">IsDeleted</label>
                    <input asp-for="IsDeleted" class="form-control" id="exampleInputEmail6">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</div>