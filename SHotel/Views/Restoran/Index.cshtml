@model RestoranViewModel 
 
<!-- SUB BANNER -->
<section class="section-sub-banner bg-3">


    <div class="sub-banner">
        <div class="container">
            <div class="text text-center">
                <h2>Restaurant</h2>
                <p>Lorem Ipsum is simply dummy text of the printing</p>
            </div>
        </div>

    </div>

</section>
<!-- END / SUB BANNER -->
<!-- RESTAURANTS -->
<section class="section-restaurant-1 bg-white">
    <div class="container">

        <div class="restaurant-lager">

            <div class="restaurant_content">

                <!-- HEADING -->
                <div class="restaurant_title text-center">
                    <h2 class="heading">BREAKFAST</h2>
                    <span class="time">11h00 Am - 2h00 Pm</span>
                </div>
                <!-- END / HEADING -->

                <div class="row">

                    <!-- ITEM -->

                    @foreach(var item in Model.Eats)
                    {

                        @if(item.EatCategoryId == 1)
                        {
                            <div class="col-md-6">
                                <div class="restaurant_item lager-thumbs">

                                    <div class="img">
                                        <a ><img src="~/uploads/eats/@item.ImageUrl" alt=""></a>
                                    </div>

                                    <div class="text">
                                        <h2><a >@item.Name</a></h2>

                                        <p class="desc">@item.Description</p>

                                        <p class="price">
                                            <span class="amout">$ @item.Price</span>
                                        </p>
                                    </div>

                                </div>
                            </div>
                        }
                    }

                    <!-- END / ITEM -->

                </div>

                <!-- HR -->
                <div class="hr"></div>
                <!-- END  / HR -->

            </div>

            <div class="restaurant_content">

                <!-- HEADING -->
                <div class="restaurant_title text-center">
                    <h2 class="heading">LUNCH</h2>
                    <span class="time">11h00 Am - 2h00 Pm</span>
                </div>
                <!-- END / HEADING -->

                <div class="row">

                    <!-- ITEM -->
                    @foreach (var item in Model.Eats)
                    {

                        @if (item.EatCategoryId == 2)
                        {
                            <div class="col-md-6">
                                <div class="restaurant_item lager-thumbs">

                                    <div class="img">
                                        <a><img src="~/uploads/eats/@item.ImageUrl" alt=""></a>
                                    </div>

                                    <div class="text">
                                        <h2><a>@item.Name</a></h2>

                                        <p class="desc">@item.Description</p>

                                        <p class="price">
                                            <span class="amout">$ @item.Price</span>
                                        </p>
                                    </div>

                                </div>
                            </div>
                        }
                    }

                    <!-- END / ITEM -->

                </div>

                <!-- HR -->
                <div class="hr"></div>
                <!-- END  / HR -->

            </div>

            <div class="restaurant_content">

                <!-- HEADING -->
                <div class="restaurant_title text-center">
                    <h2 class="heading">DINNER</h2>
                    <span class="time">11h00 Am - 2h00 Pm</span>
                </div>
                <!-- END / HEADING -->

                <div class="row">

                    <!-- ITEM -->
                    @foreach (var item in Model.Eats)
                    {

                        @if (item.EatCategoryId == 4)
                        {
                            <div class="col-md-6">
                                <div class="restaurant_item lager-thumbs">

                                    <div class="img">
                                        <a ><img src="~/uploads/eats/@item.ImageUrl" alt=""></a>
                                    </div>

                                    <div class="text">
                                        <h2><a >@item.Name</a></h2>

                                        <p class="desc">@item.Description</p>

                                        <p class="price">
                                            <span class="amout">$ @item.Price</span>
                                        </p>
                                    </div>

                                </div>
                            </div>
                        }
                    }

                    <!-- END / ITEM -->

                </div>

                <!-- HR -->
                <div class="hr"></div>
                <!-- END  / HR -->

            </div>

            <div class="restaurant_content">

                <!-- HEADING -->
                <div class="restaurant_title text-center">
                    <h2 class="heading">DRINK</h2>
                    <span class="time">All time</span>
                </div>
                <!-- END / HEADING -->

                <div class="row">

                    <!-- ITEM -->
                    @foreach (var item in Model.Eats)
                    {

                        @if (item.EatCategoryId == 5)
                        {
                            <div class="col-md-6">
                                <div class="restaurant_item lager-thumbs">

                                    <div class="img">
                                        <a ><img src="~/uploads/eats/@item.ImageUrl" alt=""></a>
                                    </div>

                                    <div class="text">
                                        <h2><a >@item.Name</a></h2>

                                        <p class="desc">@item.Description</p>

                                        <p class="price">
                                            <span class="amout">$ @item.Price</span>
                                        </p>
                                    </div>

                                </div>
                            </div>
                        }
                    }

                    <!-- END / ITEM -->

                </div>

            </div>

        </div>

    </div>
</section>
<!-- END / RESTAURANTS -->
 

<!-- EVENT DEAL RESTAURANT -->
<section class="section-event-restaurant bg-18">


    <div class="container">
        <div class="event-restaurant">
            <div class="row">
                <div class="col-md-5 col-lg-4">

                    <div class="event-restaurant_header">
                        <span class="icon"><i class="lotus-icon-calendar"></i></span>
                        <h2>EVENT &amp; DEAL</h2>
                        <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s</p>
                    </div>

                </div>
                <div class="col-md-7 col-lg-6 col-lg-offset-2">

                    <ul class="event-restaurant_content">

                        @foreach (var item in Model.Adventures)
                        {
                            if (item.StartDate >= DateTime.Now)
                            {
                                <li>
                                    <span class="event-date">
                                        <strong>@item.StartDate.Day</strong>
                                        @item.StartDate.ToString("MMM")
                                    </span>
                                    <div class="text">
                                        <a asp-action="EventsDetail" asp-controller="Event" asp-route-id="@item.Id">@item.Name</a> <br />
                                        <span class="date" style="color:white">@item.StartDate</span> <br />
                                        <a asp-action="Events" asp-controller="Event" asp-route-id="@item.Id"> [Read More] </a>
                                    </div>
                                </li>
                            }

                        }

                    </ul>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- END / EVENT DEAL RESTAURANT -->