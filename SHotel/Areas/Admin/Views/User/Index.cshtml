@using SHotel.Core.Models
@model List<AppUser>


@{
    int counter = 1;
}

<div class="container">
    <div class="row mb-3">
        <div class="col-3">

            <form asp-action="Index">
                <input name="search" placeholder="Enter Username" type="text" class="mt-3" /> <button type="submit" class="mt-3">Search</button>
            </form>

        </div>

    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Fullname</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">EmailConfirmed</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(counter++)</th>
                            <td>@item.Id</td>
                            <td>@item.Name @item.Surname</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>
                                @if (item.EmailConfirmed)
                                {
                                    <span class="badge badge-success">Confirmed</span>
                                }
                                else
                                {
                                    <span class="badge badge-success">Pending</span>
                                }
                            </td>
                            <td>
                                @if (User.Identity.Name != item.UserName)
                                {
                                    <a asp-action="Delete" asp-controller="User" class="btn btn-danger btn-delete" asp-route-id="@item.Id">Delete</a>
                                }
                                <a asp-action="Update" asp-controller="Role" class="btn btn-warning" asp-route-id="@item.Id">Edit</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>



        </div>
    </div>
</div>
