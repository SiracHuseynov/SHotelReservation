@using SHotel.Business.ViewServices
@using SHotel.Core.Models
@model ContactPost  
@inject LayoutService service

@{
    var messages = ViewBag.Message;
    var settings = await service.GetSetting();

}

<!-- SUB BANNER -->
<section class="section-sub-banner bg-9">
    <div class="sub-banner">
        <div class="container">
            <div class="text text-center">
                <h2>CONTACT WITH US</h2>
                <p>Lorem Ipsum is simply dummy text of the printing</p>
            </div>
        </div>

    </div>

</section>
<!-- END / SUB BANNER -->
<!-- CONTACT -->
<section class="section-contact">
    <div class="container">
        <div class="contact">
            <div class="row">

                <div class="col-md-6 col-lg-5">

                    <div class="text">
                        <h2>Contact</h2>
                        <p>@settings.FirstOrDefault(x => x.Key == "ContactInfo").Value</p>
                        <ul>
                            <li><i class="icon lotus-icon-location"></i> @settings.FirstOrDefault(x => x.Key == "Address").Value</li>
                            <li><i class="icon lotus-icon-phone"></i> @settings.FirstOrDefault(x => x.Key == "Phone").Value</li>
                            <li><i class="icon fa fa-envelope-o"></i> <a href="https://landing.engotheme.com/cdn-cgi/l/email-protection" class="__cf_email__" data-cfemail="0965667d7c7a61667d6c65496e64686065276a6664">@settings.FirstOrDefault(x => x.Key == "Email").Value</a></li>
                        </ul>
                    </div>


                </div>

                <div class="col-md-6 col-lg-6 col-lg-offset-1">
                    <div class="contact-form">
                        <form  method="post" asp-action="Index" asp-controller="Contact">
                     
                            <div class="row">
                                <div class="col-sm-6">
                                    <input asp-for="Name" class="field-text" name="name" placeholder="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="Email" class="field-text" name="email" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>

                                </div>
                                <div class="col-sm-12">
                                    <textarea cols="30" rows="10" asp-for="Comment" class="field-textarea" placeholder="Write what do you want"></textarea>
                                    <span asp-validation-for="Comment" class="text-danger"></span> 
                                </div>
                                <div class="col-sm-6">
                                    <button type="submit" class="awe-btn awe-btn-13">SEND</button>
                                </div>
                            </div>
                            <div id="contact-content"></div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- END / CONTACT -->
<!-- MAP -->
<section class="section-map">
    <h1 class="element-invisible">Map</h1>
    <div class="contact-map">
        @* <div id="map" data-locations="39.0926986,-94.5747324--39.0912284,-94.5743515" data-center="39.0926986,-94.5747324"></div> *@
        <div>
            <iframe src="@settings.FirstOrDefault(x => x.Key == "Location").Value" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</section>
<!-- END / MAP -->
